<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
      <div class="row">
        <p style="overflow: hidden;"><span class="col-md-3">Email</span><span class="panel panel-default col-md-9"><%= @user.email %></span></p>
        <p style="overflow: hidden;"><span class="col-md-3">Age</span><span class="panel panel-default col-md-9"><%= @user.age %></span></p>
        <p style="overflow: hidden;"><span class="col-md-3">Location</span><span class="panel panel-default col-md-9"><%= @user.location %></span></p>
      </div>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>